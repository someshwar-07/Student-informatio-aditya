    <script>
        // Simple form validation and demo interaction
        document.getElementById('loginForm').addEventListener('submit', function(event) {
            event.preventDefault();
            const username = document.getElementById('username').value;
            const password = document.getElementById('password').value;

            // Basic validation
            if (username.trim() === '' || password.trim() === '') {
                alert('Please fill in all fields.');
                return;
            }

            // Simulate login success (in a real app, this would be sent to server)
            alert(`Welcome back, ${username}! Redirecting to dashboard...`);
            // Here you could redirect: window.location.href = 'dashboard.html';
        });
    </script>
